<resources>
    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/light_colorAccent</item>

        <item name="color_background">@color/light_color_background</item>
        <item name="color_background_darker">@color/light_color_background_darker</item>

        <item name="color_textTitle">@color/light_color_textTitle</item>
        <item name="color_textMain">@color/light_color_textMain</item>
        <item name="color_textSub">@color/light_color_textSub</item>

        <item name="android:textViewStyle">@style/TextView</item>
        <item name="alertDialogTheme">@style/MyCustomDialog_Light</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/dark_colorAccent</item>

        <item name="color_background">@color/dark_color_background</item>
        <item name="color_background_darker">@color/dark_color_background_darker</item>

        <item name="color_textTitle">@color/dark_color_textTitle</item>
        <item name="color_textMain">@color/dark_color_textMain</item>
        <item name="color_textSub">@color/dark_color_textSub</item>

        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:editTextStyle">@style/EditText</item>
        <item name="alertDialogTheme">@style/MyCustomDialog_Dark</item>
    </style>

    <style name="TextView">
        <item name="android:textColor">?attr/color_textMain</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">?attr/color_textMain</item>
        <item name="android:textColorHint">?attr/color_textSub</item>
    </style>

    <style name="Jecnak.CardView" parent="CardView.Light">
        <item name="cardBackgroundColor">?attr/color_background</item>

        <item name="cardCornerRadius">5dp</item>

        <item name="android:padding">10dp</item>

        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="LinkText" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorAccent</item>

        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <!-- AlertDialog -->
    <style name="MyCustomDialog_Light" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/light_colorAccent</item>

        <item name="android:textColorPrimary">@color/light_color_textMain</item>
        <item name="android:textColorSecondary">@color/light_color_textMain</item>
        <item name="textColorAlertDialogListItem">@color/light_color_textMain</item>

        <item name="android:background">@color/light_color_background</item>
    </style>

    <style name="MyCustomDialog_Dark" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/dark_colorAccent</item>

        <item name="android:textColorPrimary">@color/dark_color_textMain</item>
        <item name="android:textColorSecondary">@color/dark_color_textMain</item>
        <item name="textColorAlertDialogListItem">@color/dark_color_textMain</item>

        <item name="android:background">@color/dark_color_background</item>
    </style>

    <!-- Suplarch -->
    <style name="Suplarch_Title" parent="android:Widget.TextView">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">?attr/color_textMain</item>
        <item name="android:textStyle">bold</item>

        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <!-- Settings -->
    <style name="Settings_Title" parent="android:Widget.TextView">
        <item name="android:textColor">?attr/color_textMain</item>
        <item name="android:textSize">17sp</item>

        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="Settings_Subtext" parent="android:Widget.TextView">
        <item name="android:textColor">?attr/color_textSub</item>
        <item name="android:textSize">15sp</item>

        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <!-- Title -->
    <style name="Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Title_Text" parent="android:Widget.TextView">
        <item name="android:layout_centerVertical">true</item>

        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>

        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/color_textTitle</item>
        <item name="android:text">@string/app_name</item>

        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Title_Image" parent="android:Widget.TextView">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>

        <item name="android:scaleType">centerInside</item>
        <item name="android:adjustViewBounds">true</item>

        <item name="android:layout_alignParentStart">true</item>

        <item name="android:padding">5dp</item>
    </style>
</resources>