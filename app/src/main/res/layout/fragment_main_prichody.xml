<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="?attr/color_background">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/MainFragmentPrichody_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="0dp"
        app:srcCompat="@drawable/prichody_white"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:focusable="true" />

    <cz.johnyapps.jecnakvkapse.CustomViews.ColoredSwipeRefreshLayout
        android:id="@+id/MainFragmentPrichody_swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/MainFragmentPrichody_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </cz.johnyapps.jecnakvkapse.CustomViews.ColoredSwipeRefreshLayout>
</RelativeLayout>