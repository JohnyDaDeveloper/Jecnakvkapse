<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Jecnak.CardView"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Line_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Line_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Český jazyk"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <cz.johnyapps.jecnakvkapse.CustomViews.ZnamkyGridView
            android:id="@+id/Line_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="10dp"
            android:verticalSpacing="10dp"
            android:columnWidth="40dp"
            android:stretchMode="columnWidth"
            android:gravity="center"
            android:padding="10dp"
            android:numColumns="auto_fit" />

        <LinearLayout
            android:paddingBottom="5dp"
            android:visibility="gone"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/Line_zaverecna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>