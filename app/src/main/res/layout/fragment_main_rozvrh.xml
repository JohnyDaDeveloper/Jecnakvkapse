<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="?attr/color_background">

    <ProgressBar
        android:id="@+id/MainFragmentRozvrh_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminate="true" />

    <HorizontalScrollView
        android:id="@+id/MainFragmentRozvrh_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/MainFragmentRozvrh_progressBar"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/MainFragmentRozvrh_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>