<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.LoginActivity"
    android:background="?attr/color_background_darker">

    <RelativeLayout
        android:id="@+id/LogIn_loginLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="?attr/colorPrimaryDark"/>

        <android.support.v7.widget.CardView
            style="@style/Jecnak.CardView"
            app:cardCornerRadius="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingTop="40dp"
                android:paddingEnd="20dp"
                android:paddingBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:textColor="?attr/colorPrimary"
                    android:textStyle="bold"
                    android:text="Přihlášení" />

                <EditText
                    android:id="@+id/LogIn_edtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:layout_margin="10dp"
                    android:hint="Login"
                    tools:ignore="Autofill" />

                <EditText
                    android:id="@+id/LogIn_edtPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:layout_margin="10dp"
                    android:hint="Heslo"
                    tools:ignore="Autofill" />

                <CheckBox
                    android:id="@+id/LogIn_checkBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Zapamatovat heslo" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/LogIn_btnOffline"
                        style="@style/LinkText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Offline rozvrh"
                        android:onClick="offline"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginEnd="5dp"
                        android:layout_alignBottom="@+id/LogIn_buttonLogin"
                        android:gravity="center_vertical"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />

                    <Button
                        android:id="@+id/LogIn_buttonLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Přihlásit"
                        android:onClick="login"
                        android:layout_marginBottom="20dp"
                        android:layout_marginEnd="5dp"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/LogIn_rozvrhLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </RelativeLayout>
</RelativeLayout>