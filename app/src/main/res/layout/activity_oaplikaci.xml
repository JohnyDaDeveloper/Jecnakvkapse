<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.OAplikaci"
    android:background="?attr/color_background_darker">

    <RelativeLayout
        android:id="@+id/Main_title"
        style="@style/Title">

        <ImageView
            android:id="@+id/MainTitle_menuBtn"
            style="@style/Title_Image"
            android:onClick="back"
            android:src="@drawable/back"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/MainTitle_menuBtn"
            style="@style/Title_Text"/>
    </RelativeLayout>

    <android.support.v7.widget.CardView
        style="@style/Jecnak.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/Text_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/oaplikaci_vyvojar_title"/>

            <TextView
                style="@style/Text_Subtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/person"
                android:gravity="center_vertical"
                android:drawablePadding="5dp"
                android:text="@string/oaplikaci_vyvojar_jmeno"/>

            <TextView
                style="@style/LinkText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/mail"
                android:gravity="center_vertical"
                android:drawablePadding="5dp"
                android:onClick="posliMail"
                android:text="@string/oaplikaci_vyvojar_kontakt"/>

            <TextView
                android:visibility="gone"
                style="@style/Text_Subtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/github"
                android:gravity="center_vertical"
                android:drawablePadding="5dp"
                android:text="@string/oaplikaci_vyvojar_github"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/Jecnak.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/Text_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/oaplikaci_app_title"/>

            <TextView
                android:id="@+id/OAplikaci_appVerze"
                style="@style/Text_Subtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/version"
                android:gravity="center_vertical"
                android:drawablePadding="5dp"
                android:text="@string/oaplikaci_app_verze"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/Jecnak.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/Text_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/oaplikaci_info_title"/>

            <TextView
                style="@style/Text_Subtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:drawablePadding="5dp"
                android:text="@string/oaplikaci_info_suplarch"/>

            <TextView
                style="@style/LinkText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:drawablePadding="5dp"
                android:onClick="clearCache"
                android:text="@string/oaplikaci_info_suplarch_clear_cache"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>